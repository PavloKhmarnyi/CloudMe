<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/dayTextView1"
        android:layout_width="100dp"
        android:layout_height="41dp"

        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"

        android:text="Sunday"
        android:textColor="@color/black"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/cloudinaryWeatherItemImageView1"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/sun"
        app:layout_constraintLeft_toRightOf="@id/dayTextView1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/temperatureTextView1"
        android:layout_width="50dp"
        android:layout_height="29dp"

        android:layout_marginLeft="5dp"

        android:text="25Â°C"
        android:textColor="@color/black"
        android:textSize="22dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/cloudinaryWeatherItemImageView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/humidityWeatherItemImageView1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/drop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/temperatureTextView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/warmTextView1"
        android:layout_width="45dp"
        android:layout_height="29dp"

        android:layout_marginLeft="2dp"

        android:text="34%"
        android:textColor="@color/black"
        android:textSize="22dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/humidityWeatherItemImageView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/dateTextView1"
        android:layout_width="100dp"
        android:layout_height="26dp"

        android:layout_marginLeft="1dp"

        android:text="28/4/2018"
        android:textColor="@color/black"
        android:textSize="18dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/warmTextView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>